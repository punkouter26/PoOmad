@page "/setup"
@using PoOmad.Shared.DTOs
@using PoOmad.Shared.Validators
@using FluentValidation
@inject Services.ApiClient ApiClient
@inject Services.AuthStateService AuthState
@inject NavigationManager Navigation

<div class="setup-container">
    <div class="setup-card">
        <h1>Welcome to PoOmad!</h1>
        <p>Let's set up your profile</p>

        <EditForm Model="@profile" OnValidSubmit="@HandleSubmit">
            <FluentValidationValidator Validator="@validator" />

            <div class="form-group">
                <label>Email</label>
                <InputText @bind-Value="profile.Email" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label>Height (e.g., 5'10" or 178cm)</label>
                <InputText @bind-Value="profile.Height" class="form-control" placeholder="5'10&quot;" />
                <ValidationMessage For="@(() => profile.Height)" />
            </div>

            <div class="form-group">
                <label>Starting Weight (lbs)</label>
                <InputNumber @bind-Value="profile.StartingWeight" class="form-control" placeholder="180" />
                <ValidationMessage For="@(() => profile.StartingWeight)" />
            </div>

            <button type="submit" class="btn-primary" disabled="@isSubmitting">
                @(isSubmitting ? "Creating Profile..." : "Create Profile")
            </button>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="error-message">@errorMessage</div>
            }
        </EditForm>
    </div>
</div>

@code {
    private UserProfileDto profile = new();
    private ProfileValidator validator = new();
    private bool isSubmitting;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        var user = await ApiClient.GetCurrentUserAsync();
        if (user?.IsAuthenticated == true)
        {
            profile.Email = user.Email;
            profile.GoogleId = user.GoogleId;
        }
        else
        {
            Navigation.NavigateTo("/auth");
        }
    }

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            var result = await ApiClient.CreateProfileAsync(profile);
            if (result != null)
            {
                AuthState.SetUser(new UserInfoDto
                {
                    Email = profile.Email,
                    GoogleId = profile.GoogleId,
                    IsAuthenticated = true,
                    HasProfile = true
                });
                
                Navigation.NavigateTo("/");
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to create profile: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}

