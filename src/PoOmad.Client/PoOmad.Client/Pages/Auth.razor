@page "/auth"
@inject NavigationManager Navigation

<div class="auth-container">
    <div class="auth-card">
        <h1>PoOmad</h1>
        <p>Your minimalist OMAD accountability partner</p>
        
        <button class="btn-google" @onclick="SignInWithGoogle">
            <span>Sign in with Google</span>
        </button>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="error-message">
                @errorMessage
            </div>
        }
    </div>
</div>

@code {
    private string? errorMessage;

    protected override void OnInitialized()
    {
        var uri = new Uri(Navigation.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        
        if (query["error"] != null)
        {
            errorMessage = query["error"] switch
            {
                "authentication_failed" => "Authentication failed. Please try again.",
                "missing_claims" => "Unable to retrieve user information from Google.",
                _ => "An error occurred during sign in."
            };
        }
    }

    private void SignInWithGoogle()
    {
        Navigation.NavigateTo("/api/auth/google", true);
    }
}

<style>
    .auth-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: #1a1a1a;
    }

    .auth-card {
        background: #2a2a2a;
        padding: 3rem;
        border-radius: 8px;
        text-align: center;
        max-width: 400px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }

    .auth-card h1 {
        color: #fff;
        margin-bottom: 1rem;
    }

    .auth-card p {
        color: #aaa;
        margin-bottom: 2rem;
    }

    .btn-google {
        background: #fff;
        color: #333;
        border: none;
        padding: 12px 24px;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.2s;
    }

    .btn-google:hover {
        background: #f0f0f0;
    }

    .error-message {
        margin-top: 1rem;
        padding: 10px;
        background: #d32f2f;
        color: #fff;
        border-radius: 4px;
    }
</style>
