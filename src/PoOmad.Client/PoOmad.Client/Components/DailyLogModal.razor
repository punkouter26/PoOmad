@using PoOmad.Shared.DTOs
@using PoOmad.Shared.Validators
@inject Services.ApiClient ApiClient

<div class="modal-backdrop @(IsVisible ? "visible" : "")" @onclick="Cancel">
    <div class="modal-content" @onclick:stopPropagation>
        <div class="modal-header">
            <h2>@(IsEditMode ? "Edit" : "Log") Day - @SelectedDate.ToString("MMM dd, yyyy")</h2>
            <button class="btn-close" @onclick="Cancel">Ã—</button>
        </div>

        <EditForm Model="@dailyLog" OnValidSubmit="@HandleSubmit">
            <FluentValidationValidator Validator="@validator" />

            <div class="modal-body">
                <div class="form-group">
                    <label>Did you complete OMAD today?</label>
                    <div class="toggle-group">
                        <button type="button" 
                                class="toggle-btn @(dailyLog.OmadCompliant ? "active" : "")"
                                @onclick="() => dailyLog.OmadCompliant = true">
                            Yes
                        </button>
                        <button type="button" 
                                class="toggle-btn @(!dailyLog.OmadCompliant ? "active" : "")"
                                @onclick="() => dailyLog.OmadCompliant = false">
                            No
                        </button>
                    </div>
                </div>

                <div class="form-group">
                    <label>Did you consume alcohol?</label>
                    <div class="toggle-group">
                        <button type="button" 
                                class="toggle-btn @(dailyLog.AlcoholConsumed ? "active" : "")"
                                @onclick="() => dailyLog.AlcoholConsumed = true">
                            Yes
                        </button>
                        <button type="button" 
                                class="toggle-btn @(!dailyLog.AlcoholConsumed ? "active" : "")"
                                @onclick="() => dailyLog.AlcoholConsumed = false">
                            No
                        </button>
                    </div>
                </div>

                <div class="form-group">
                    <label>Weight (lbs) - Optional</label>
                    <InputNumber @bind-Value="dailyLog.Weight" class="form-control" placeholder="180.5" step="0.1" />
                    <ValidationMessage For="@(() => dailyLog.Weight)" />
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="error-message">
                        @errorMessage
                        @if (requiresConfirmation)
                        {
                            <button type="button" class="btn-confirm-weight" @onclick="ConfirmWeightChange">
                                Confirm Weight
                            </button>
                        }
                    </div>
                }
            </div>

            <div class="modal-footer">
                <button type="button" class="btn-secondary" @onclick="Cancel" disabled="@isSubmitting">
                    Cancel
                </button>
                @if (IsEditMode)
                {
                    <button type="button" class="btn-danger" @onclick="DeleteLog" disabled="@isSubmitting">
                        Delete
                    </button>
                }
                <button type="submit" class="btn-primary" disabled="@isSubmitting">
                    @(isSubmitting ? "Saving..." : "Save")
                </button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public DateTime SelectedDate { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnSaved { get; set; }

    private DailyLogDto dailyLog = new();
    private DailyLogValidator validator = new();
    private bool isSubmitting;
    private bool IsEditMode;
    private string? errorMessage;
    private bool requiresConfirmation;

    protected override async Task OnParametersSetAsync()
    {
        if (IsVisible && SelectedDate != default)
        {
            dailyLog = new DailyLogDto { Date = SelectedDate };
            errorMessage = null;
            requiresConfirmation = false;

            // Try to load existing log
            var existingLog = await ApiClient.GetDayLogAsync(SelectedDate);
            if (existingLog != null)
            {
                IsEditMode = true;
                dailyLog = existingLog;
            }
            else
            {
                IsEditMode = false;
            }
        }
    }

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            var (success, error) = await ApiClient.LogDayAsync(dailyLog, requiresConfirmation);
            
            if (success)
            {
                await OnSaved.InvokeAsync();
                await OnClose.InvokeAsync();
            }
            else if (error != null && error.Contains("5 lb threshold"))
            {
                errorMessage = error;
                requiresConfirmation = true;
            }
            else
            {
                errorMessage = error ?? "Failed to save log";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private async Task ConfirmWeightChange()
    {
        requiresConfirmation = true;
        await HandleSubmit();
    }

    private async Task DeleteLog()
    {
        if (!await ConfirmDelete())
            return;

        isSubmitting = true;
        try
        {
            var success = await ApiClient.DeleteDayLogAsync(SelectedDate);
            if (success)
            {
                await OnSaved.InvokeAsync();
                await OnClose.InvokeAsync();
            }
            else
            {
                errorMessage = "Failed to delete log";
            }
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private async Task<bool> ConfirmDelete()
    {
        // Simple confirmation - in production, use a proper confirmation dialog
        return true;
    }

    private async Task Cancel()
    {
        await OnClose.InvokeAsync();
    }
}

